{
  "name": "plugin-rtc",
  "version": "0.1.0",
  "description": "A Twilio-CLI plugin for real-time communication apps",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "oclif-dev manifest && oclif-dev readme",
    "version": "oclif-dev readme && git add README.md"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.14.0",
    "@twilio-labs/serverless-api": "^1.0.3",
    "@twilio/cli-core": "^4.4.6",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@types/jest": "^25.1.3",
    "chai": "^4.2.0",
    "globby": "^10",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "superagent": "^5.2.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "/oclif.manifest.json",
    "/src",
    "/package-lock.json"
  ],
  "oclif": {
    "name": "rtc",
    "commands": "./src/commands",
    "bin": "twilio",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "rtc": {
        "description": "A plugin which showcases real-time communication applications powered by Twilio"
      },
      "rtc:video": {
        "description": "Commands related to Programmable Video apps"
      },
      "rtc:video:list": {
        "description": "View a deployed Programmable Video app"
      },
      "rtc:video:deploy-app": {
        "description": "Deploy a Programmable Video app"
      },
      "rtc:video:delete-app": {
        "description": "Delete a Programmable Video app"
      }
    }
  }
}
